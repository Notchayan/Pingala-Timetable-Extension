{
    "manifest_version": 3,
    "name": "Class Reminder",
    "version": "1.0",
    "permissions": [
        "notifications",
        "alarms",
        "storage",
        "scripting",
        "tabs",
        "downloads",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/iitk.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
